pipeline {
    agent none
    stages{
        stage('Install requirements'){
            agent{
                docker{
                    image 'python:3.6'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
                    sh 'python -m pip install django==1.11'
                }
            }
        }
        stage('Compile'){
            agent{
                docker{
                    image 'python:3.6'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
                    sh 'python -m py_compile manage.py'
                    sh 'pip install django_jenkins'
                }
            }
        }
        stage('Build'){
            agent{
                docker{
                    image 'python:3.6'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
                    #!/bin/bash
                    source myenv/bin/activate
                    pip3 install -r requirements.txt
                    cd reports
                    touch *.xml
                    touch *.report
                    cd ..
                    python3 manage.py jenkins â€” enable-coverage
                }
            }
        }
        stage('Tests'){
            agent{
                docker{
                    image 'python:3.6'
                }
            }
            steps{
                withEnv(["HOME=${env.WORKSPACE}"]){
                    sh 'python manage.py test'
                }
            }
        }
    }
}
